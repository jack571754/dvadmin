# DVAdmin 开发环境配置
# 复制此文件为 .env.dev 并更新配置值

# ============================================
# 数据库配置
# ============================================
MYSQL_PASSWORD=DVADMIN3
MYSQL_ROOT_PASSWORD=DVADMIN3

# ============================================
# Redis配置
# ============================================
REDIS_PASSWORD=DVADMIN3

# ============================================
# Django设置
# ============================================
DJANGO_SECRET_KEY=django-insecure-dev-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# 服务器配置
# ============================================
DJANGO_SERVER_MODE=asgi
DJANGO_WORKERS=2

# ============================================
# Celery配置
# ============================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@dvadmin3-redis:6379/3
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@dvadmin3-redis:6379/4
